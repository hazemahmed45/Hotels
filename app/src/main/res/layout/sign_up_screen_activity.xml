<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hotels.features.main.activities.Login.SignUpScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User Informations"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_firstnamelayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/user_signup_firstname_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/first_name_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_lastnamelayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_firstnamelayout_editext"
        android:layout_alignLeft="@+id/user_signup_firstnamelayout_editext"
        android:layout_alignStart="@+id/user_signup_firstnamelayout_editext">

        <EditText
            android:id="@+id/user_signup_lastname_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/last_name_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_phonelayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_lastnamelayout_editext"
        android:layout_alignLeft="@+id/user_signup_lastnamelayout_editext"
        android:layout_alignStart="@+id/user_signup_lastnamelayout_editext">

        <EditText
            android:id="@+id/user_signup_phone_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/phone_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_passwordlayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_phonelayout_editext"
        android:layout_alignLeft="@+id/user_signup_phonelayout_editext"
        android:layout_alignStart="@+id/user_signup_phonelayout_editext">

        <EditText
            android:id="@+id/user_signup_password_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_confirmpasswordlayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_passwordlayout_editext"
        android:layout_alignLeft="@+id/user_signup_passwordlayout_editext"
        android:layout_alignStart="@+id/user_signup_passwordlayout_editext">

        <EditText
            android:id="@+id/user_signup_confirmpassword_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_signup_emaillayout_editext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_signup_confirmpasswordlayout_editext"
        android:layout_alignLeft="@+id/user_signup_confirmpasswordlayout_editext"
        android:layout_alignStart="@+id/user_signup_confirmpasswordlayout_editext">

        <EditText
            android:id="@+id/user_signup_email_editext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="@string/sign_up" />
</RelativeLayout>
